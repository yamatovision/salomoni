{
  "name": "saju-engine",
  "version": "1.0.0",
  "description": "韓国式四柱推命計算エンジン（SajuEngine）",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:international": "jest src/tests/international-saju.test.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "saju",
    "fortune",
    "korean",
    "fourpillars",
    "astrology"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "date-fns-tz": "^3.2.0",
    "lunar-javascript": "^1.6.0",
    "luxon": "^3.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/node": "^18.19.86",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(ts|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
